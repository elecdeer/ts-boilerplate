{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run build:live",
    "dev": "ts-node --files src/index.ts",
    "dev:watch": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest",
    "check": "npm-run-all check:*",
    "check:type": "tsc",
    "check:format": "prettier --check src/**/*.ts src/*.ts",
    "check:lint": "eslint src/**/*.ts src/*.ts --max-warnings 0",
    "format": "prettier src/**/*.ts src/*.ts --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier src/**/*.ts src/*.ts --write",
      "eslint src/**/*.ts src/*.ts --max-warnings 0"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "eslintIgnore": [
    "/.eslintrc.cjs",
    "/jest.config.js"
  ],
  "dependencies": {
    "eslint-import-resolver-typescript": "^2.5.0",
    "parcel": "^2.0.1"
  },
  "engines": {
    "node": "16"
  },
  "type": "module",
  "module": "dist/module.js"
}
