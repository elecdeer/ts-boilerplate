{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "npm-run-all dev:*",
    "dev:build": "npm run build",
    "dev:run": "node dist/module.js",
    "build": "parcel build src/index.ts",
    "test": "jest",
    "check": "npm-run-all check:*",
    "check:type": "tsc --noEmit",
    "check:format": "prettier --check src/**/*.ts src/*.ts",
    "check:lint": "eslint src/**/*.ts src/*.ts --max-warnings 0",
    "format": "prettier src/**/*.ts src/*.ts --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier src/**/*.ts src/*.ts --write",
      "eslint src/**/*.ts src/*.ts --max-warnings 0"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@parcel/packager-ts": "^2.5.0",
    "@parcel/transformer-typescript-types": "^2.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "parcel": "^2.5.0"
  },
  "eslintIgnore": [
    "/.eslintrc.cjs",
    "/jest.config.js"
  ],
  "dependencies": {
  },
  "engines": {
    "node": "16"
  },
  "type": "module",
  "module": "dist/module.js"
}
